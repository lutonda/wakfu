{% block stylesheet %}
<link rel="stylesheet" href="/stylesheet/timeline.css">
{% endblock %}
<div class="container">                      
    <div class="row text-center justify-content-center mb-5">
        <div class="col-xl-6 col-lg-8">
            <h2 class="font-weight-bold">Os principais eventos</h2>
            <p class="text-muted">We’re very proud of the path we’ve taken. Explore the history that made us the company we are today.</p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="timeline-steps aos-init aos-animate" data-aos="fade-up">
            {% for time in timelines  %}
                
                <div class="timeline-step">
                    <div class="timeline-content" data-toggle="popover" data-trigger="hover" data-placement="top" title="" data-content="And here's some amazing content. It's very engaging. Right?" data-original-title="2003">
                        <div class="inner-circle"></div>
                        <p class="h6 mt-3 mb-1"> {{time.ano}} </p>
                        <p class="h6 text-muted mb-0 mb-lg-0">{{time.titulo}}</p>
                    </div>
                </div>
                
            {% endfor %}
            </div>
        </div>
    </div>
</div>