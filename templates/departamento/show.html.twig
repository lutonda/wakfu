{% extends 'base.html.twig' %}

{% block title %}Departamento{% endblock %}

{% block body %}
    <h1>Departamento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ departamento.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ departamento.titulo }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ departamento.code }}</td>
            </tr>
            <tr>
                <th>Imagem</th>
                <td>{{ departamento.imagem }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ departamento.icon }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ departamento.created ? departamento.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{{ departamento.isactive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('departamento_index') }}">back to list</a>

    <a href="{{ path('departamento_edit', {'id': departamento.id}) }}">edit</a>

    {{ include('departamento/_delete_form.html.twig') }}
{% endblock %}
