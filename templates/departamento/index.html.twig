{% extends 'base.html.twig' %}

{% block title %}Departamento index{% endblock %}

{% block body %}
    <h1>Departamento index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Code</th>
                <th>Imagem</th>
                <th>Icon</th>
                <th>Created</th>
                <th>Isactive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for departamento in departamentos %}
            <tr>
                <td>{{ departamento.id }}</td>
                <td>{{ departamento.titulo }}</td>
                <td>{{ departamento.code }}</td>
                <td>{{ departamento.imagem }}</td>
                <td>{{ departamento.icon }}</td>
                <td>{{ departamento.created ? departamento.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ departamento.isactive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('departamento_show', {'id': departamento.id}) }}">show</a>
                    <a href="{{ path('departamento_edit', {'id': departamento.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('departamento_new') }}">Create new</a>
{% endblock %}
