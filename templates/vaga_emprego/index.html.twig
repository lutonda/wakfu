                                <p>
                                <h2>
                                {{ vaga_emprego.categoria }} de 
                                {{ vaga_emprego.area }}</h2>
                                <span>
                                {{ vaga_emprego.codigo }}
                                </span>
                                </p>
                            </div>
                            <hr>
                            <span>{{ vaga_emprego.dataFim|date('d/M/Y') }}</span>
                        </a>
                    </div>
                {% endfor %}
                
            </div>
        </div>
    </section>
{% endblock %}
