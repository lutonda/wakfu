{% form_theme form 'bootstrap_5_layout.html.twig' %}
<section class="ftco-section bg-light ftco-no-pt">
	<div class="container-xl" style="background:#FFF">
		<div class="row justify-content-center">

			<div class="col-md-8 heading-section mb-5 aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000">
				<h1>{{title}}
				</div>
				<div class="text-left col-md-6">
					<a href="{{ path('curso_index') }}" class="btn btn-default">
						<i class="fa fa-chevron-left"></i>
						Voltar
					</a>
				</div>
				<div class="text-right col-md-6">
					<div class="pull-right">
						{% if curso.id %}
							{{ include('curso/_delete_form.html.twig') }}
						{% 	endif %}
					</div>
				</div>
			</div>
			<div class="row justify-content-center">
				{{ form_start(form) }}
				{{ form_widget(form) }}
				<button class="btn btn-primary">
					<i class="fa fa-save"></i>
					Salvar</button>
				{{ form_end(form) }}
			</div>
		</div>
	</section>


	{% block javascript %}
		<script type="text/javascript" src='/javascript/jquery/jquery.min.js'></script>
		<script type="text/javascript" src="/richtexteditor/rte.js"></script>
		<script type="text/javascript" src='/richtexteditor/plugins/all_plugins.js'></script>
		<script>


			var editor1cfg = {}
editor1cfg.toolbar = "basic";
var editor1 = new RichTextEditor("#curso_apresentacao", editor1cfg);
var editor2 = new RichTextEditor("#curso_saida", editor1cfg);
var editor3 = new RichTextEditor("#curso_condicoes", editor1cfg);
var editor4 = new RichTextEditor("#curso_plano", editor1cfg);

$(document).ready(function () {
$('select').addClass('form-control')
})
		</script>
	{% endblock %}
	{% block stylesheet %}
		<link rel="stylesheet" href="/richtexteditor/rte_theme_default.css"/>
	{% endblock %}
