{% extends 'base.html.twig' %}

{% block title %}Curso{% endblock %}

{% block body %}
    <h1>Curso</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ curso.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ curso.titulo }}</td>
            </tr>
            <tr>
                <th>Duracao</th>
                <td>{{ curso.duracao }}</td>
            </tr>
            <tr>
                <th>Apresentacao</th>
                <td>{{ curso.apresentacao }}</td>
            </tr>
            <tr>
                <th>Saida</th>
                <td>{{ curso.saida }}</td>
            </tr>
            <tr>
                <th>Condicoes</th>
                <td>{{ curso.condicoes }}</td>
            </tr>
            <tr>
                <th>Plano</th>
                <td>{{ curso.plano }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ curso.icon }}</td>
            </tr>
            <tr>
                <th>Imagem</th>
                <td>{{ curso.imagem }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ curso.code }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ curso.created ? curso.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{{ curso.isactive ? 'Yes' : 'No' }}</td>
