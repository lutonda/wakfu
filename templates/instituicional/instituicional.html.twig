{% extends 'base.html.twig' %}

{% block title %}Instituicional
{% endblock %}

{% block body %}

	<section class="ftco-section bg-light">
		<div class="container">
			<div class="row no-gutters justify-content-center">
			
			{% if admin %}
				<div class="row justify-content-center">
					<div class="col-md-12 text-center">
						<a href="{{ path('instituicionais_edit',{id:instituicional.id}) }}" class="btn btn-primary">Editar</a>
					</div>
				</div>
			{% endif %}
				<div class="col-md-12">
					<div class="wrapper">
						<div class="row g-0" style="background:#ccc">
							<div class="col-lg-12 order-lg-last">
								<div class="contact-wrap w-100 p-md-5 p-4">
								<h3><b>
								Mensagem da coordenadora
								</b>
								</h3>
									{{instituicional.mensagem|raw}}

								</div>
							</div>
							<!--
							<div class="col-md-6 img" style="background-image:url(/images/uploads/Pessoa/{{ instituicional.coordenador.imagem }})">
							-->
						</div>
						
					</div>
				</div>
			</div>
		</div>
	</section>
	<section class="ftco-section ftco-no-pt" id="#mais">
		<div class="container">
			<div class="row no-gutters justify-content-center">
				
				<div  id="ensino" class="col-md-6 col-lg-4 aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="300">
					<div class="block-7" style="min-height: 620px">
						<div class="text-center">
							<span class="price">
								<span class="number">Ensino</span>
							</span>
							<div class="p-4 px-lg-5">
								{{instituicional.ensino|raw}}
							</div>
							<!--
							<a href="#" class="btn btn-primary btn-outline-primary d-block px-2 py-3">Saber mais</a>
							-->
						</div>
					</div>
				</div>
				<div id="investigacao" class="col-md-6 col-lg-4 aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="100">
					<div class="block-7"  style="min-height: 620px">
						<div class="text-center">
							<span class="price">
								<span class="number">Investigação</span>
							</span>
							<div class="p-4 px-lg-5">
								{{instituicional.investigacao|raw}}
							</div>
							<!--
							<a href="#" class="btn btn-primary btn-outline-primary d-block px-2 py-3">Saber mais</a>
							-->
						</div>
					</div>
				</div>
				<div id="extensao" class="col-md-6 col-lg-4 aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
					<div class="block-7"  style="min-height: 620px">
						<div class="text-center">
							<span class="price">
								<span class="number">Extensão</span>
							</span>
							<div class="p-4 px-lg-5">
								{{instituicional.extensao|raw}}
							</div>
							<!--
							<a href="#" class="btn btn-primary btn-outline-primary d-block px-2 py-3">saber mais</a>
							-->
						</div>
					</div>
				</div>
			</div>
			</div>
		</section>
    <section class="ftco-section-counter img" style="background-image:url(/images/xbg_3.jpg.pagespeed.ic._5ftKPXrag.webp)">
			<div class="overlay"></div>
			<div class="container">
				<div class="row section-counter viewed">
					<div class="col-sm-6 col-md-6 col-lg-3 d-flex align-items-stretch">
						<div class="counter-wrap-2 d-flex aos-init aos-animate" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1000">
							<div class="icon">
								<span class="flaticon-graduation"></span>
							</div>
							<div class="text">
								<h2 class="number">
									<span class="countup">3,000</span>
								</h2>
								<span class="caption">Capacidade de Estudantes</span>
							</div>
						</div>
					</div>
					<div class="col-sm-6 col-md-6 col-lg-3 d-flex align-items-stretch">
						<div class="counter-wrap-2 d-flex aos-init aos-animate" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1000">
							<div class="icon">
								<span class="flaticon-engineer"></span>
							</div>
							<div class="text">
								<h2 class="number">
									<span class="countup">10</span>
								</h2>
								<span class="caption">Laboratorios</span>
							</div>
						</div>
					</div>
					<div class="col-sm-6 col-md-6 col-lg-3 d-flex align-items-stretch">
						<div class="counter-wrap-2 d-flex aos-init aos-animate" data-aos="fade-up" data-aos-delay="300" data-aos-duration="1000">
							<div class="icon">
								<span class="flaticon-learning"></span>
							</div>
							<div class="text">
								<h2 class="number">
									<span class="countup">40</span>
								</h2>
								<span class="caption">Salas de Aulas</span>
							</div>
						</div>
					</div>
					<div class="col-sm-6 col-md-6 col-lg-3 d-flex align-items-stretch">
						<div class="counter-wrap-2 d-flex aos-init aos-animate" data-aos="fade-up" data-aos-delay="400" data-aos-duration="1000">
							<div class="icon">
								<span class="flaticon-certificate"></span>
							</div>
							<div class="text">
								<h2 class="number">
									<span class="countup">8</span>
								</h2>
								<span class="caption">Cursos</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
{% endblock %}
