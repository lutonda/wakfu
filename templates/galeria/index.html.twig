{% extends 'base.html.twig' %}

{% block title %}Galeria index
{% endblock %}

{% block body %}
	<section class="ftco-section bg-light ftco-no-pt">
		<div class="container-xl">
			<div class="row justify-content-center">
				<div class="col-md-8 heading-section text-center mb-5 aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000">
					{% if admin %}
						<a href="{{ path('galeria_new') }}" class="btn btn-primary">
							<i class="fa fa-plus"></i>
							Create new</a>
					{% endif %}
				</div>
			</div>
			<div class="row justify-content-center">
				{% for galeria in galerias %}
					<div class="col-md-4 col-lg-3 d-flex">
						<div class="blog-entry justify-content-end aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="100">
							<a href="{#{path('galeria_show', {'id': galeria.id})}#}" class="block-20 img" style="background-image:url(/images/uploads/Galeria/{{ galeria.imagem }})"></a>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
