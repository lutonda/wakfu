{% extends 'base.html.twig' %}

{% block title %}Evento{% endblock %}

{% block body %}
    <h1>Evento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evento.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ evento.titulo }}</td>
            </tr>
            <tr>
                <th>Texto</th>
                <td>{{ evento.texto }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ evento.data ? evento.data|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Imagem</th>
                <td>{{ evento.imagem }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ evento.code }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ evento.created ? evento.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{{ evento.isactive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evento_index') }}">back to list</a>

    <a href="{{ path('evento_edit', {'id': evento.id}) }}">edit</a>

    {{ include('evento/_delete_form.html.twig') }}
{% endblock %}
